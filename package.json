{
  "name": "crossroads-fundraising",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "node dist/server/server.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc && tsc -p cypress",
    "validate": "run-p \"test -- --run\" lint typecheck"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/dist",
    "/.vinxi",
    "/.output"
  ],
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "@tanstack/react-router": "^1.144.0",
    "@tanstack/react-start": "^1.145.3",
    "@tanstack/react-table": "^8.20.5",
    "bcryptjs": "^2.4.3",
    "isbot": "^5.1.32",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "stripe": "^20.1.0",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@tanstack/react-router-devtools": "^1.144.0",
    "@testing-library/cypress": "^8.0.7",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/eslint": "^8.4.10",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.23",
    "babel-plugin-react-compiler": "^1.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^14.5.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "happy-dom": "^8.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "prisma": "^4.16.2",
    "start-server-and-test": "^1.15.4",
    "tailwindcss": "^3.4.19",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
